{% extends 'base.html.twig' %}

{% block body %}
    <h1>Faction</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faction.id }}</td>
            </tr>
            <tr>
                <th>Offset</th>
                <td>{{ faction.offset }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ faction.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ faction.description }}</td>
            </tr>
            <tr>
                <th>Iconfilename</th>
                <td>{{ faction.iconFilename }}</td>
            </tr>
            <tr>
                <th>Imagefilename</th>
                <td>{{ faction.imageFilename }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('faction_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('faction_edit', { 'id': faction.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
