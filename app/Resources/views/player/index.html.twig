{% extends 'base.html.twig' %}

{% block body %}
    <h1>Players list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Faction</th>
                <th>City</th>
                <th>Alliance</th>
                <th>Name</th>
                <th>Description</th>
                <th>Iconfilename</th>
                <th>Imagefilename</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td><a href="{{ path('player_show', { 'id': player.id }) }}">{{ player.id }}</a></td>
                <td>{{ player.faction }}</td>
                <td>{{ player.city }}</td>
                <td>{{ player.alliance }}</td>
                <td>{{ player.name }}</td>
                <td>{{ player.description }}</td>
                <td>{{ player.iconFilename }}</td>
                <td>{{ player.imageFilename }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('player_show', { 'id': player.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('player_edit', { 'id': player.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('player_new') }}">Create a new player</a>
        </li>
    </ul>
{% endblock %}
