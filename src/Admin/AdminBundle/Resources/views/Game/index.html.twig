{% extends '@AdminAdmin/base.html.twig' %}

{% block body %}
    <h1>Games list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Server</th>
                <th>Name</th>
                <th>Description</th>
                <th>Iconfilename</th>
                <th>Imagefilename</th>
                <th>Servers</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><a href="{{ path('game_show', { 'id': game.id }) }}">{{ game.id }}</a></td>
                <td></td>
                <td>{{ game.name }}</td>
                <td>{{ game.description }}</td>
                <td>{{ game.iconFilename }}</td>
                <td>{{ game.imageFilename }}</td>
                <td>
                    <ul>
                        {% for server in game.servers %}
                            <li>{{ server.name }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('game_show', { 'id': game.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('game_edit', { 'id': game.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_new') }}">Create a new game</a>
        </li>
    </ul>
{% endblock %}
