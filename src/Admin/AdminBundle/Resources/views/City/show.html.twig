{% extends '@AdminAdmin/base.html.twig' %}

{% block body %}
    <h1>City</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Lastupdate</th>
                <td>{{ city.lastUpdate | date }}</td>
            </tr>
            <tr>
                <th>Player</th>
                <td>{{ city.player ? city.player.name : '' }}</td>
            </tr>
            <tr>
                <th>Trade</th>
                <td>{{ city.trade }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ city.score }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ city.description }}</td>
            </tr>
            <tr>
                <th>Iconfilename</th>
                <td>{{ city.iconFilename }}</td>
            </tr>
            <tr>
                <th>Imagefilename</th>
                <td>{{ city.imageFilename }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('city_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('city_edit', { 'id': city.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
