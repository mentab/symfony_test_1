{% extends '@AdminAdmin/base.html.twig' %}

{% block body %}
    <h1>Gameobject</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gameObject.id }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{% if gameObject.score %}<a href="{{ path('gameobjectscore_show', { 'id': gameObject.score.id }) }}">{{ gameObject.score.id }}</a>{% endif %}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{% if gameObject.time %}<a href="{{ path('gameobjecttime_show', { 'id': gameObject.time.id }) }}">{{ gameObject.time.id }}</a>{% endif %}</td>
            </tr>
            <tr>
                <th>Maintenance</th>
                <td>{% if gameObject.maintenance %}<a href="{{ path('gameobjectvalue_show', { 'id': gameObject.maintenance.id }) }}">{{ gameObject.maintenance.id }}</a>{% endif %}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{% if gameObject.cost %}<a href="{{ path('gameobjectvalue_show', { 'id': gameObject.cost.id }) }}">{{ gameObject.cost.id }}</a>{% endif %}</td>
            </tr>
            <tr>
                <th>Prod</th>
                <td>{% if gameObject.prod %}<a href="{{ path('gameobjectvalue_show', { 'id': gameObject.prod.id }) }}">{{ gameObject.prod.id }}</a>{% endif %}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ gameObject.id }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{% if gameObject.actions %}{{ gameObject.actions|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Behaviour</th>
                <td>{% if gameObject.behaviours %}{{ gameObject.behaviours|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Levelmax</th>
                <td>{{ gameObject.levelMax }}</td>
            </tr>
            <tr>
                <th>Faction</th>
                <td>{{ gameObject.faction.name }}</td>
            </tr>
            <tr>
                <th>Offset</th>
                <td>{{ gameObject.offset }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gameObject.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gameObject.description }}</td>
            </tr>
            <tr>
                <th>IconFilename</th>
                <td>{{ gameObject.iconFilename }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
                <td>{{ gameObject.imageFilename }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('gameobject_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('gameobject_edit', { 'id': gameObject.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
