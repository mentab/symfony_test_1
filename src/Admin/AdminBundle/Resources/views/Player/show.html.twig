{% extends '@AdminAdmin/base.html.twig' %}

{% block body %}
    <h1>Player</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ player.id }}</td>
            </tr>
            <tr>
                <th>Faction</th>
                <td>{{ player.faction }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ player.city }}</td>
            </tr>
            <tr>
                <th>Alliance</th>
                <td>{{ player.alliance }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ player.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ player.description }}</td>
            </tr>
            <tr>
                <th>Iconfilename</th>
                <td>{{ player.iconFilename }}</td>
            </tr>
            <tr>
                <th>Imagefilename</th>
                <td>{{ player.imageFilename }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('player_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('player_edit', { 'id': player.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
